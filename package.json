{
  "name": "mrbuilder-repository",
  "private": true,
  "version": "0.0.1",
  "description": "A tool for building monorepos",
  "author": "Justin Spears <speajus@gmail.com>",
  "homepage": "mr-builder.github.io",
  "repository": {
    "type": "git",
    "url": "git@github.com:mr-builder/mrbuilder.git"
  },
  "license": "BSD",
  "workspaces": [
    "core/*",
    "presets/*",
    "plugins/*",
    "create-mrbuilder-app",
    "wiki",
    "examples/*"
  ],
  "dependencies": {
    "lerna": "^3.18.4",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^3.7.2"
  },
  "publishConfig": {
    "registry": "https://registry.npm.orig"
  },
  "scripts": {
    "lerna": "lerna",
    "test": "lerna run prepare --no-private && ./node_modules/.bin/lerna run prepare --scope @mrbuilder/example-* && lerna run test",
    "clean": "lerna clean && rimraf core/*/lib plugins/*/lib examples/*/lib",
    "prepublish:all": "lerna run prepare",
    "publish:all": "lerna publish --registry http://registry.npm.org --force-publish=*"
  }
}
